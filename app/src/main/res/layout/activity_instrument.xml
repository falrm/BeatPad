<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonlatane.beatpad.InstrumentActivity">

    <com.jonlatane.beatpad.view.keyboard.KeyboardView
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/key_height_white"
        android:layout_alignParentBottom="true"/>

    <com.jonlatane.beatpad.view.melody.MelodyView
        android:id="@+id/melody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/keyboard"
        android:layout_alignParentTop="true"/>

</RelativeLayout>
