<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/tonicDarkest" />
            <stroke android:width="1dp" android:color="#747170" />
            <corners android:radius="2dp" />
            <padding android:left="0dp" android:top="0dp"
                android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/key_base_black" />
            <item android:drawable="@drawable/key_black_highlight_root" android:bottom="@dimen/key_highlight_bottom_black" />
        </layer-list>
    </item>
</selector>